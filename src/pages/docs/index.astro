    title: "Developer Onboarding",
    description: "Get started with ICN development in minutes",
    link: "/docs/onboarding",
    icon: "rocket-launch",
    status: "available"
  },
  {
    title: "System Architecture",
    description: "Understand ICN's technical architecture",
    link: "/docs/architecture", 
    icon: "cpu-chip",
    status: "available"
  },
  {
    title: "ICN Philosophy",
    description: "Learn about the principles behind ICN",
    link: "/docs/philosophy",
    icon: "heart",
    status: "available"
  }
];

const coreFeatures = [
  {
    title: "Mesh Computing",
    description: "Distributed job execution with automatic bidding and verification",
    link: "/docs/mesh-computing",
    icon: "globe-americas",
    status: "coming-soon"
  },
  {
    title: "Mana Economics",
    description: "Regenerative resource system for sustainable computing",
    link: "/docs/economy",
    icon: "arrow-path",
    status: "available"
  },
  {
    title: "Governance System", 
    description: "Federated decision-making and policy enforcement",
    link: "/docs/governance",
    icon: "users",
    status: "available"
  },
  {
    title: "Decentralized Identity",
    description: "Self-sovereign identity with DIDs and verifiable credentials",
    link: "/docs/identity",
    icon: "identification",
    status: "coming-soon"
  }
];

const developerTools = [
  {
    title: "Core API Reference",
    description: "Complete API documentation for ICN core crates",
    link: "/docs/api",
    icon: "code-bracket",
    status: "available"
  },
  {
    title: "CLI Tools",
    description: "Command-line interface documentation",
    link: "/docs/cli", 
    icon: "terminal",
    status: "available"
  },
  {
    title: "Networking Guide",
    description: "P2P networking and libp2p integration",
    link: "/docs/networking",
    icon: "signal",
    status: "available"
  },
  {
    title: "Observability",
    description: "Monitoring, metrics, and debugging",
    link: "/docs/observability",
    icon: "chart-bar",
    status: "available"
  }
];

const specifications = [
  {
    title: "All RFCs",
    description: "Request for Comments and technical specifications",
    link: "/docs/rfcs",
    icon: "document-text",
    status: "available"
  },
  {
    title: "Governance Core (RFC 0010)",
    description: "Comprehensive governance mechanisms specification",
    link: "/docs/rfc-0010-governance-core",
    icon: "shield-check",
    status: "available"
  },
  {
    title: "Protocol Specifications",
    description: "Low-level protocol and message format definitions",
    link: "/docs/protocol",
    icon: "cog",
    status: "coming-soon"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-midnight-navy via-bg-secondary to-midnight-navy relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
