---
import Layout from '../layouts/Layout.astro';

// In a real setup, you might fetch these from a CMS or markdown files
const posts = [
  {
    slug: 'sample-post',
    title: 'Our First Blog Post!',
    date: '2024-07-26',
    excerpt: 'Welcome to the new ICN blog. Here we will share updates, thoughts, and news about the InterCooperative Network.',
    image: '/images/blog/sample-post-banner.jpg' // Placeholder image
  },
  // Add more posts here
];

const upcomingPosts = [
  "ICN's Economic Model Explained",
  "Building Cooperative Infrastructure",
  "Governance in Practice",
  "Technical Deep Dive: The ICN Protocol"
];
---

<Layout title="ICN Blog" description="Latest news, updates, and insights from the InterCooperative Network community.">
  <div class="p-4 mb-4 bg-yellow-100 border-l-4 border-yellow-400 text-yellow-800 rounded">
    ðŸš§ This page is a work in progress. Check back soon for more!
  </div>
  <section class="py-12">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl font-bold text-center mb-12">ICN Blog & News</h1>

      {posts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-center text-xl text-gray-200">No posts yet. Check back soon!</p>
          
          <div class="mt-8 max-w-md mx-auto">
            <h3 class="text-lg font-semibold mb-4 text-white">Coming Soon:</h3>
            <ul class="space-y-2 text-gray-100">
              {upcomingPosts.map(title => (
                <li>â€¢ {title}</li>
              ))}
            </ul>
          </div>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map(post => (
            <article class="bg-slate-800/70 p-6 rounded-lg border border-slate-600 hover:shadow-lg transition-shadow">
              {post.image && (
                <a href={`/blog/${post.slug}`}>
                  <img src={post.image} alt={`Banner for ${post.title}`} class="w-full h-48 object-cover" />
                </a>
              )}
              <div class="p-6 flex flex-col flex-grow">
                <h2 class="text-xl font-semibold mb-2 text-white">
                  <a href={`/blog/${post.slug}`} class="hover:text-sky-400 transition-colors">{post.title}</a>
                </h2>
                <p class="text-sm text-gray-400 mb-2">Published on {new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                <p class="text-gray-200 mb-4 flex-grow">{post.excerpt}</p>
                <a href={`/blog/${post.slug}`} class="text-sky-400 hover:underline text-sm">Read more â†’</a>
              </div>
            </article>
          ))}
        </div>
      )}

      {/* Future pagination could go here */}
    </div>
  </section>
</Layout>

<style>
  /* Any page-specific styles */
</style> 