---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeatureCard from '../components/FeatureCard.astro';

// Homepage copy
const pageTitle = "ICN: Digital Infrastructure for Cooperative Communities";
const pageDescription = "InterCooperative Network provides federated compute, governance, and economic infrastructure designed for cooperatives, communities, and federations. Build, govern, and own the systems that shape your world.";

// Core features highlighting ICN's unique value propositions
const features = [
  {
    title: "Federated Computing",
    description: "Distributed mesh computing with automated job bidding, execution, and verification across the network.",
    icon: "cpu-chip",
    details: "Execute computational tasks across a decentralized network of nodes with built-in reputation systems and economic incentives."
  },
  {
    title: "Regenerative Economics",
    description: "Sustainable mana-based resource system that regenerates over time, preventing abuse while ensuring fair access.",
    icon: "arrow-path",
    details: "Our unique economic model uses regenerating capacity credits influenced by reputation and community policies."
  },
  {
    title: "Community Governance",
    description: "Transparent, verifiable governance through formal proposals, voting mechanisms, and smart policy enforcement.",
    icon: "users",
    details: "Participate in federated decision-making with explicit, versioned policies compiled to verifiable WASM contracts."
  },
  {
    title: "Decentralized Identity",
    description: "Self-sovereign identity for individuals, cooperatives, communities, and federations using DIDs.",
    icon: "identification",
    details: "Manage your digital identity without relying on centralized authorities or corporate platforms."
  },
  {
    title: "Verifiable Execution",
    description: "Every significant action produces signed receipts anchored in a content-addressable DAG.",
    icon: "shield-check",
    details: "Complete audit trail and transparency through cryptographically verifiable execution receipts."
  },
  {
    title: "Open Source",
    description: "100% open source infrastructure built by and for the community, not corporate interests.",
    icon: "code-bracket",
    details: "Modern Rust implementation with comprehensive documentation and contributor-friendly development practices."
  }
];

// Key principles that guide ICN development
const principles = [
  {
    title: "People, Not Empires",
    description: "Infrastructure designed for communities and cooperatives, not corporate extraction.",
    icon: "‚ù§Ô∏è"
  },
  {
    title: "Transparent Governance",
    description: "All decisions are made through explicit, verifiable governance processes.",
    icon: "üó≥Ô∏è"
  },
  {
    title: "Sustainable by Design",
    description: "Economic models that promote regeneration and prevent resource abuse.",
    icon: "üå±"
  }
];

---

<Layout title={pageTitle} description={pageDescription}>
  <HeroSection />

  <!-- Features Section -->
  <section id="features" class="py-20 bg-bg-secondary relative">
    <div class="absolute inset-0 opacity-5 bg-[url('/images/pattern-dots.svg')] bg-repeat"></div>
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Why Choose ICN?
        </h2>
        <p class="text-xl text-light-slate max-w-3xl mx-auto">
          ICN provides the foundational infrastructure for a new kind of digital economy‚Äîone that's 
          owned and governed by the communities that use it.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div class="card card-hover scroll-reveal" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-r from-accent-primary to-accent-blue rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <!-- Icon based on feature.icon -->
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-white mb-3">{feature.title}</h3>
                <p class="text-slate-gray mb-4">{feature.description}</p>
                <p class="text-sm text-light-slate">{feature.details}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Principles Section -->
  <section class="py-20 bg-midnight-navy relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-accent-primary/5 to-accent-blue/5"></div>
    <div class="container mx-auto px-4 relative">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Our Core Principles
        </h2>
        <p class="text-xl text-light-slate max-w-3xl mx-auto">
          These fundamental values guide every decision we make and every line of code we write.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {principles.map((principle, index) => (
          <div class="text-center scroll-reveal" style={`animation-delay: ${index * 0.2}s;`}>
            <div class="text-6xl mb-6">{principle.icon}</div>
