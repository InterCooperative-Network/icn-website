---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeatureCard from '../components/FeatureCard.astro';

// Homepage copy from new mockup
const pageTitle = "ICN: 21st Century Governance & Economy Infrastructure";
const pageDescription = "InterCooperative Network: The digital backbone for real 21st-century self-governance and economic cooperation. Infrastructure for people‚Äînot empires.";

// Updated Three Pillars content from new visual mockup
const features = [
  {
    title: "Community",
    description: "Grow together",
    icon: "chat-bubble", // üí¨
    // link and buttonText removed for minimalism as per new mockup
  },
  {
    title: "Cooperative",
    description: "Share prosperity",
    icon: "network-nodes", // üåê
  },
  {
    title: "Federation",
    description: "Connect globally",
    icon: "document-text", // üõ∞Ô∏è
  }
];

---

<Layout title={pageTitle} description={pageDescription}>
  <HeroSection /> {/* Props are now primarily set by defaults in HeroSection.astro */}

  {/* Three Pillars Section - Title moved up, gradient div removed */}
  <section id="how-it-works" class="py-16 md:py-20 bg-bg-secondary relative">
    <div class="absolute inset-0 opacity-5 bg-[url('/images/pattern-grid.svg')] bg-repeat"></div>
    <div class="container mx-auto px-4 relative">
      <h2 class="text-center text-4xl lg:text-5xl font-bold text-white tracking-normal mb-12 md:mb-16">
        Explore the Pillars of ICN
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-12 mb-12">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title}
            description={feature.description}
            iconName={feature.icon}
          />
        ))}
      </div>
      <p class="text-center mt-12 max-w-sm mx-auto">
        <a href="/get-started" class="text-accent-glow font-semibold hover:underline transition">Get Started ‚Üí</a>
      </p>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section id="join" class="py-12 md:py-16 bg-midnight-navy">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8 text-accent-glow">Begin Exploring the ICN</h2>
      <div class="flex flex-col sm:flex-row flex-wrap gap-4 sm:gap-6 justify-center items-center">
        <a href="/docs" class="btn btn-secondary">Read the Docs</a>
        <a href="/infrastructure" class="btn btn-secondary">Explore Infrastructure</a>
        <a href="/projects" class="btn btn-secondary">View Projects</a>
        <a href="/get-started" class="btn btn-primary">Get Started</a>
      </div>
    </div>
  </section>

  <!-- Footer content will be handled by Footer.astro -->

</Layout>
