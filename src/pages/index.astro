---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeatureCard from '../components/FeatureCard.astro';

// Homepage copy from new mockup
const pageTitle = "ICN: 21st Century Governance & Economy Infrastructure";
const pageDescription = "InterCooperative Network: The digital backbone for real 21st-century self-governance and economic cooperation. Infrastructure for people‚Äînot empires.";

// Updated Three Pillars content from new visual mockup
const features = [
  {
    title: "Community",
    description: "Govern together.",
    icon: "chat-bubble", // üí¨
    // link and buttonText removed for minimalism as per new mockup
  },
  {
    title: "Cooperative",
    description: "Share prosperity.",
    icon: "network-nodes", // üåê
  },
  {
    title: "Federation",
    description: "Connect globally.",
    icon: "document-text", // üõ∞Ô∏è
  }
];

---

<Layout title={pageTitle} description={pageDescription}>
  <HeroSection /> {/* Props are now primarily set by defaults in HeroSection.astro */}

  <!-- Three Pillars Section -->
  <section id="three-pillars" class="py-16 md:py-20 bg-soft-black">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-8">
        {features.map(feature => (
          <div class="w-full md:w-1/3">
            <FeatureCard 
              title={feature.title}
              description={feature.description}
              iconName={feature.icon}
              link={undefined}
              buttonText={undefined}
              buttonClass={undefined}
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-12 md:py-16 bg-bg-secondary">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8 text-text-primary">Explore ICN</h2>
      <div class="flex flex-col sm:flex-row flex-wrap gap-4 sm:gap-6 justify-center items-center">
        <a href="/docs" class="button button-secondary py-3 px-6">Read the Docs</a>
        <a href="/infrastructure" class="button button-secondary py-3 px-6">Explore Infrastructure</a>
        <a href="/projects" class="button button-secondary py-3 px-6">View Projects</a>
        <a href="/get-started" class="button button-primary py-3 px-6">Get Started</a>
      </div>
    </div>
  </section>

  <!-- Footer content will be handled by Footer.astro -->

</Layout>
