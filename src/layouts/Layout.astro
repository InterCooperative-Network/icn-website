---
// Minimal Layout.astro for testing
export interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Minimal Test</title>
</head>
<body>
    <h1>Layout Test: {title}</h1>
    <slot />
    <p>Minimal footer</p>
</body>
</html> 