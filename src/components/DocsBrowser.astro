// Props
interface Props {
  compact?: boolean;
  showRoot?: boolean;
}

const { compact = false, showRoot = true } = Astro.props;

// File type icons
const getFileIcon = (filename: string) => {
  if (filename.endsWith('.md')) return '📄';
  if (filename.endsWith('.yml') || filename.endsWith('.yaml')) return '⚙️';
  if (filename.endsWith('.json')) return '🔗';
  return '📄';
};

const getFolderIcon = () => '📁';

// Render tree recursively
const renderItem = (item: any, level: number = 0) => {
  const indent = level * 1.5; // rem units for indentation
  const isFolder = item.type === 'folder';
  
  return `
    <div class="repo-item" style="margin-left: ${indent}rem;">
      <div class="flex items-center gap-3 py-2 px-3 rounded-lg hover:bg-slate-800/50 transition-colors group">
        <span class="text-lg flex-shrink-0">
          ${isFolder ? getFolderIcon() : getFileIcon(item.name)}
        </span>
        
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2">
            <span class="font-mono text-sm text-white truncate">${item.name}</span>
            ${item.localUrl ? `
              <a href="${item.localUrl}" 
                 class="opacity-0 group-hover:opacity-100 transition-opacity bg-accent-primary/10 text-accent-primary text-xs px-2 py-1 rounded border border-accent-primary/30 hover:bg-accent-primary/20">
                View
              </a>
            ` : ''}
          </div>
          ${item.description ? `
            <p class="text-xs text-slate-gray mt-1 truncate">${item.description}</p>
          ` : ''}
        </div>
        
        <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
          <div class="flex gap-1">
            <a href="${item.githubUrl}" target="_blank" rel="noopener noreferrer"
               class="p-1 hover:bg-slate-700 rounded text-slate-gray hover:text-white transition-colors"
