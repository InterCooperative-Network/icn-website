---
// src/components/NavBar.astro
const navLinks = [
  { href: "/about", text: "About" },
  { href: "/join", text: "Join" },
  { href: "/governance", text: "Governance" },
  { href: "/infrastructure", text: "Infrastructure" },
  { href: "/projects", text: "Projects" },
  { href: "/community", text: "Community" },
  { href: "/docs", text: "Docs" },
  { href: "/blog", text: "Blog" },
];
---

<header class="bg-midnight-navy/80 backdrop-blur-md sticky top-0 z-50 border-b border-soft-black/50 shadow-sm">
  <div class="container mx-auto flex items-center h-[var(--header-height)] px-4">
    <!-- Mobile Menu Button (Left Side) -->
    <button id="menu-toggle" class="md:hidden text-white hover:text-sky-blue focus:outline-none relative z-50 mr-4" aria-label="Open main menu" aria-expanded="false" aria-controls="mobile-menu">
      <svg id="menu-icon" class="w-6 h-6 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
      <svg id="close-icon" class="w-6 h-6 absolute top-0 left-0 transition-transform duration-200 transform scale-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Logo (Center on mobile, Left on desktop) -->
    <a href="/" class="flex items-center space-x-3 flex-1 md:flex-initial">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-nav-active-link" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 12a4.5 4.5 0 014.5-4.5M7.5 12a4.5 4.5 0 004.5 4.5m4.5-4.5a4.5 4.5 0 01-4.5 4.5m4.5-4.5a4.5 4.5 0 00-4.5-4.5" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V12m0-4.5V3M16.5 12H12m-4.5 0H3" />
      </svg>
      <span class="font-semibold text-sm text-white hover:text-sky-blue transition-colors uppercase tracking-wider">INTERCOOPERATIVE NETWORK</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-8 lg:space-x-10 ml-auto">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class="text-slate-gray hover:text-sky-blue font-medium transition-colors text-base"
          aria-current={Astro.url.pathname === link.href || (link.href.includes('#') && Astro.url.pathname === link.href.split('#')[0]) ? "page" : false}
        >
          {link.text}
        </a>
      ))}
    </nav>
  </div>

  <!-- Mobile Menu (conditionally rendered via JS) -->
  <div id="mobile-menu" class="md:hidden hidden bg-midnight-navy border-t border-slate-gray/20 absolute top-full left-0 w-full shadow-2xl z-50 py-6">
    <div class="flex flex-col space-y-2 px-4">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class="text-white hover:text-sky-blue block px-4 py-4 rounded-lg text-lg font-medium hover:bg-slate-gray/20 transition-all duration-200 border border-transparent hover:border-sky-blue/30"
          aria-current={Astro.url.pathname === link.href || (link.href.includes('#') && Astro.url.pathname === link.href.split('#')[0]) ? "page" : false}
        >
          {link.text}
        </a>
      ))}
      <div class="pt-4 border-t border-slate-gray/20 mt-4">
        <a href="https://discord.gg/GCWKPWdvgH" target="_blank" rel="noopener noreferrer" class="text-indigo-400 hover:text-indigo-300 block px-4 py-3 rounded-lg text-base font-medium hover:bg-indigo-900/20 transition-all duration-200 flex items-center">
          <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"></path>
          </svg>
          Join Discord
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Enhanced Mobile Menu Toggle
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (menuToggle && mobileMenu && menuIcon && closeIcon) {
    menuToggle.addEventListener('click', () => {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true' || false;
      
      // Toggle menu state
      menuToggle.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenu.classList.toggle('hidden');
      document.body.classList.toggle('mobile-menu-open');
      
      // Animate icons
      if (!isExpanded) {
        // Menu is opening
        menuIcon.style.transform = 'scale(0)';
        closeIcon.style.transform = 'scale(1)';
        menuToggle.setAttribute('aria-label', 'Close main menu');
      } else {
        // Menu is closing
        menuIcon.style.transform = 'scale(1)';
        closeIcon.style.transform = 'scale(0)';
        menuToggle.setAttribute('aria-label', 'Open main menu');
      }
    });

    // Close menu when clicking on a link
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
        document.body.classList.remove('mobile-menu-open');
        menuIcon.style.transform = 'scale(1)';
        closeIcon.style.transform = 'scale(0)';
        menuToggle.setAttribute('aria-expanded', 'false');
        menuToggle.setAttribute('aria-label', 'Open main menu');
      });
    });
  }
</script>

<style>
  /* Style for the active navigation link */
  nav a[aria-current="page"],
  #mobile-menu a[aria-current="page"] {
    color: var(--color-nav-active-link); /* Active link is now nav-active-link */
    font-weight: 600;
  }
  #mobile-menu a[aria-current="page"] {
    background-color: var(--color-accent-glow);
    color: var(--color-midnight-navy);
    border-color: var(--color-accent-glow);
  }
  
  /* Prevent body scroll when mobile menu is open */
  body.mobile-menu-open {
    overflow: hidden;
  }
  
  /* Mobile menu overlay background */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 40;
  }
</style> 