---
// src/components/FeatureCard.astro
export interface Props {
  title: string;
  description: string;
  iconName?: string;
  link?: string;
}

const { title, description, iconName, link } = Astro.props;

// SVG icons map
const icons: { [key: string]: string } = {
  users: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>`,
  lightbulb: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18h6M12 22V18M9 14a5 5 0 0 1 .9-2.95A5.13 5.13 0 0 1 12 6a5.13 5.13 0 0 1 2.1 1.05A5 5 0 0 1 15 14Z"/></svg>`,
  code: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>`,
  'chat-bubble': `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>`,
  'network-nodes': `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><circle cx="19" cy="5" r="2"></circle><circle cx="5" cy="19" r="2"></circle><circle cx="5" cy="5" r="2"></circle><circle cx="19" cy="19" r="2"></circle><path d="M12 15v4M12 5v4M15 12h4M5 12h4"></path></svg>`,
  'document-text': `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line></svg>`
};

const iconSvg = iconName && icons[iconName] ? icons[iconName] :
  `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>`;
---

<div class="feature-card group">
  <!-- Gradient border effect -->
  <div class="card-glow"></div>

  <!-- Card content -->
  <div class="card-inner">
    {iconName && (
      <div class="card-icon">
        <Fragment set:html={iconSvg} />
      </div>
    )}

    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>

    {link && (
      <a href={link} class="card-link">
        Learn more
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    )}
  </div>
</div>

<style>
  .feature-card {
    position: relative;
    border-radius: 1rem;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-card:hover {
    transform: translateY(-4px);
  }

  .card-glow {
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(0, 229, 191, 0) 0%,
      rgba(0, 229, 191, 0) 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    transition: background 0.3s ease;
    pointer-events: none;
  }

  .feature-card:hover .card-glow {
    background: linear-gradient(
      135deg,
      rgba(0, 229, 191, 0.3) 0%,
      rgba(99, 102, 241, 0.2) 100%
    );
  }

  .card-inner {
    position: relative;
    height: 100%;
    padding: 1.75rem;
    background: linear-gradient(
      145deg,
      rgba(26, 35, 50, 0.6) 0%,
      rgba(16, 24, 40, 0.8) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.04);
    border-radius: 1rem;
    backdrop-filter: blur(8px);
    display: flex;
    flex-direction: column;
  }

  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    margin-bottom: 1.25rem;
    border-radius: 0.75rem;
    background: linear-gradient(135deg, rgba(0, 229, 191, 0.15) 0%, rgba(99, 102, 241, 0.1) 100%);
    color: var(--color-accent-primary);
    transition: all 0.3s ease;
  }

  .feature-card:hover .card-icon {
    background: linear-gradient(135deg, rgba(0, 229, 191, 0.25) 0%, rgba(99, 102, 241, 0.15) 100%);
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(0, 229, 191, 0.2);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.75rem;
    letter-spacing: -0.01em;
  }

  .card-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-light-slate);
    flex-grow: 1;
    margin-bottom: 0;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    margin-top: 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-accent-primary);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .card-link:hover {
    color: var(--color-accent-glow);
    gap: 0.5rem;
  }

  .card-link svg {
    transition: transform 0.2s ease;
  }

  .card-link:hover svg {
    transform: translateX(2px);
  }
</style> 