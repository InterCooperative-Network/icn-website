---
// src/components/HeroSection.astro
export interface Props {
  pretitle?: string;
  headline1?: string;
  headline2?: string;
  supportingSubhead?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
  showImage?: boolean;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  pretitle = "IN DEVELOPMENT • 20 PHASES • 1,134+ TESTS",
  headline1 = "A Substrate Daemon",
  headline2 = "For The Cooperative Internet",
  supportingSubhead = "Infrastructure for timebanks, mutual credit systems, and cooperative coordination. DIDs, trust graphs, double-entry ledger, CCL smart contracts, and Pilot Web UI included.",
  primaryButtonText = "Get Started",
  primaryButtonLink = "/get-started",
  secondaryButtonText = "View Source",
  secondaryButtonLink = "https://github.com/InterCooperative-Network/icn",
  showImage = true,
  imageUrl = "/images/hero-network.svg",
  imageAlt = "ICN Cooperative Network Visualization"
} = Astro.props;
---

<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Layered background -->
  <div class="absolute inset-0 hero-bg"></div>

  <!-- Gradient mesh overlay -->
  <div class="absolute inset-0 hero-mesh"></div>

  <!-- Ambient glow orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="glow-orb glow-orb-1"></div>
    <div class="glow-orb glow-orb-2"></div>
    <div class="glow-orb glow-orb-3"></div>
  </div>

  <!-- Subtle grid pattern -->
  <div class="absolute inset-0 grid-pattern"></div>

  <!-- Content -->
  <div class="container mx-auto px-6 py-24 relative z-10">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Text Content -->
        <div class="text-center lg:text-left space-y-8">
          <!-- Pretitle badge -->
          <div class="animate-fade-in">
            <span class="inline-flex items-center gap-2 text-xs font-semibold tracking-widest uppercase px-4 py-2 rounded-full bg-accent-primary/5 border border-accent-primary/20 text-accent-primary backdrop-blur-sm">
              <span class="w-1.5 h-1.5 rounded-full bg-accent-primary animate-pulse"></span>
              {pretitle}
            </span>
          </div>

          <!-- Headlines -->
          <div class="space-y-3">
            <h1 class="hero-title animate-fade-in-up delay-100">
              {headline1}
            </h1>
            <h2 class="hero-subtitle animate-fade-in-up delay-200">
              {headline2}
            </h2>
          </div>

          <!-- Supporting text -->
          <p class="text-lg lg:text-xl text-light-slate/90 max-w-xl mx-auto lg:mx-0 leading-relaxed animate-fade-in-up delay-300">
            {supportingSubhead}
          </p>

          <!-- Action buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up delay-400">
            <a href={primaryButtonLink} class="btn btn-primary text-base px-7 py-3.5 group" target="_blank" rel="noopener noreferrer">
              {primaryButtonText}
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href={secondaryButtonLink} class="btn btn-secondary text-base px-7 py-3.5 group" target="_blank" rel="noopener noreferrer">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              {secondaryButtonText}
            </a>
          </div>

          <!-- Stats row -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 pt-8 animate-fade-in-up delay-500">
            <div class="stat-item">
              <div class="stat-value text-accent-primary">16</div>
              <div class="stat-label">Crates</div>
            </div>
            <div class="stat-item">
              <div class="stat-value text-accent-secondary">QUIC</div>
              <div class="stat-label">Transport</div>
            </div>
            <div class="stat-item">
              <div class="stat-value text-accent-tertiary">CCL</div>
              <div class="stat-label">Contracts</div>
            </div>
            <div class="stat-item">
              <div class="stat-value text-mint-green">1,134+</div>
              <div class="stat-label">Tests</div>
            </div>
          </div>
        </div>

        <!-- Visual Element -->
        {showImage && (
          <div class="relative flex items-center justify-center animate-fade-in-up delay-300 lg:delay-200">
            <div class="hero-visual">
              <!-- Glow backdrop -->
              <div class="visual-glow"></div>

              <!-- Main image -->
              <div class="relative z-10">
                <img
                  src={imageUrl}
                  alt={imageAlt}
                  class="w-full max-w-md mx-auto animate-float-slow"
                />
              </div>

              <!-- Floating accent dots -->
              <div class="floating-dot dot-1"></div>
              <div class="floating-dot dot-2"></div>
              <div class="floating-dot dot-3"></div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-fade-in delay-700">
    <a href="#features" class="scroll-indicator group">
      <span class="scroll-indicator-text">Explore</span>
      <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  /* Hero Background */
  .hero-bg {
    background: linear-gradient(
      180deg,
      #080C14 0%,
      #0C1220 40%,
      #101828 100%
    );
  }

  .hero-mesh {
    background:
      radial-gradient(ellipse at 20% 30%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(0, 229, 191, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(139, 92, 246, 0.04) 0%, transparent 60%);
  }

  .grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.02'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }

  /* Glow orbs */
  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    animation: glow-pulse 6s ease-in-out infinite;
  }

  .glow-orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(0, 229, 191, 0.3) 0%, transparent 70%);
    top: 10%;
    left: 5%;
  }

  .glow-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.25) 0%, transparent 70%);
    bottom: 20%;
    right: 10%;
    animation-delay: 2s;
  }

  .glow-orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 4s;
  }

  @keyframes glow-pulse {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.05); }
  }

  /* Hero typography */
  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.05;
    letter-spacing: -0.04em;
    color: var(--color-white);
  }

  .hero-subtitle {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, #00FFD4 0%, #6366F1 50%, #8B5CF6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Stats */
  .stat-item {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .stat-item {
      text-align: left;
    }
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--color-slate-gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.25rem;
  }

  /* Hero visual */
  .hero-visual {
    position: relative;
    padding: 2rem;
  }

  .visual-glow {
    position: absolute;
    inset: -20%;
    background: radial-gradient(
      ellipse at center,
      rgba(0, 229, 191, 0.15) 0%,
      rgba(99, 102, 241, 0.1) 30%,
      transparent 70%
    );
    filter: blur(40px);
    animation: glow-pulse 5s ease-in-out infinite;
  }

  .hero-visual img {
    filter: drop-shadow(0 0 40px rgba(0, 229, 191, 0.2));
  }

  /* Floating dots */
  .floating-dot {
    position: absolute;
    border-radius: 50%;
    animation: float-dot 4s ease-in-out infinite;
  }

  .dot-1 {
    width: 12px;
    height: 12px;
    background: var(--color-accent-primary);
    top: 15%;
    left: 10%;
    box-shadow: 0 0 20px rgba(0, 229, 191, 0.5);
  }

  .dot-2 {
    width: 8px;
    height: 8px;
    background: var(--color-accent-secondary);
    bottom: 25%;
    right: 15%;
    animation-delay: 1s;
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.5);
  }

  .dot-3 {
    width: 6px;
    height: 6px;
    background: var(--color-accent-tertiary);
    top: 60%;
    left: 5%;
    animation-delay: 2s;
    box-shadow: 0 0 12px rgba(139, 92, 246, 0.5);
  }

  @keyframes float-dot {
    0%, 100% { transform: translateY(0) scale(1); opacity: 0.8; }
    50% { transform: translateY(-15px) scale(1.1); opacity: 1; }
  }

  /* Scroll indicator */
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-slate-gray);
    transition: color 0.3s ease;
    text-decoration: none;
  }

  .scroll-indicator:hover {
    color: var(--color-accent-primary);
  }

  .scroll-indicator-text {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
  }

  /* Button overrides for hero */
  .btn {
    text-decoration: none;
  }

  /* Animation classes */
  .animate-fade-in {
    animation: fadeIn 0.7s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.7s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
  }

  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }

  .delay-100 { animation-delay: 100ms; }
  .delay-200 { animation-delay: 200ms; }
  .delay-300 { animation-delay: 300ms; }
  .delay-400 { animation-delay: 400ms; }
  .delay-500 { animation-delay: 500ms; }
  .delay-700 { animation-delay: 700ms; }

  /* Responsive */
  @media (max-width: 640px) {
    .hero-title {
      font-size: 2.25rem;
    }
    .hero-subtitle {
      font-size: 1.75rem;
    }
    .stat-value {
      font-size: 1.25rem;
    }
    .glow-orb {
      opacity: 0.2;
    }
  }
</style> 