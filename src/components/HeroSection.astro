---
// src/components/HeroSection.astro
export interface Props {
  // Pretitle like "OPEN - FEDERATED - COOPERATIVE"
  pretitle?: string;
  
  // Main multi-line headline
  headline1?: string;
  headline2?: string;
  // headline3 will be effectively removed by not using it or defaulting to empty
  // tagline is already removed
  
  // Descriptive paragraph
  description?: string;
  
  supportingSubhead?: string;
  
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
  
  showImage?: boolean;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  pretitle = "OPEN • FEDERATED • COOPERATIVE",
  headline1 = "Digital Infrastructure",
  headline2 = "For the People",
  supportingSubhead = "Build, govern, and own the systems that shape your world. No corporate landlords. No imperial gatekeepers. Just communities working together to create a better digital future.",
  primaryButtonText = "Get Started",
  primaryButtonLink = "/get-started",
  secondaryButtonText = "View Documentation",
  secondaryButtonLink = "/docs",
  showImage = true,
  imageUrl = "/images/hero-network.svg", 
  imageAlt = "ICN Network Visualization"
} = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background with animated gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-midnight-navy via-bg-secondary to-midnight-navy"></div>
  
  <!-- Animated background elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent-primary rounded-full blur-3xl animate-pulse-glow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-accent-purple rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 w-32 h-32 bg-accent-blue rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 2s;"></div>
  </div>
  
  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 opacity-5 bg-[url('/images/grid-pattern.svg')] bg-repeat"></div>
  
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Text Content -->
        <div class="text-center lg:text-left space-y-8">
          <!-- Pretitle -->
          <div class="inline-block">
            <span class="text-accent-glow font-semibold tracking-widest text-sm uppercase px-4 py-2 border border-accent-glow/30 rounded-full bg-accent-glow/10 backdrop-blur-sm animate-fade-in">
              {pretitle}
            </span>
          </div>
          
          <!-- Headlines -->
          <div class="space-y-4">
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight text-white animate-fade-in-up" style="animation-delay: 0.2s;">
              {headline1}
            </h1>
            <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight text-gradient animate-fade-in-up" style="animation-delay: 0.4s;">
              {headline2}
            </h2>
          </div>
          
          <!-- Supporting text -->
          <p class="text-xl text-light-slate max-w-2xl mx-auto lg:mx-0 leading-relaxed animate-fade-in-up" style="animation-delay: 0.6s;">
            {supportingSubhead}
          </p>
          
          <!-- Action buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up" style="animation-delay: 0.8s;">
            <a href={primaryButtonLink} class="btn btn-primary text-lg px-8 py-4">
              {primaryButtonText}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href={secondaryButtonLink} class="btn btn-secondary text-lg px-8 py-4">
              {secondaryButtonText}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </a>
          </div>
          
          <!-- Stats or key points -->
          <div class="flex flex-col sm:flex-row gap-8 justify-center lg:justify-start pt-8 animate-fade-in-up" style="animation-delay: 1s;">
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-accent-glow">100%</div>
              <div class="text-sm text-slate-gray">Open Source</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-accent-glow">Federated</div>
              <div class="text-sm text-slate-gray">Architecture</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="text-2xl font-bold text-accent-glow">Community</div>
              <div class="text-sm text-slate-gray">Governed</div>
            </div>
          </div>
        </div>
        
        <!-- Visual Element -->
        {showImage && (
          <div class="relative flex items-center justify-center animate-fade-in-up" style="animation-delay: 0.5s;">
            <!-- Glowing container -->
            <div class="relative">
              <!-- Background glow -->
              <div class="absolute inset-0 bg-gradient-to-r from-accent-primary to-accent-blue rounded-full blur-3xl opacity-20 animate-pulse-glow"></div>
              
              <!-- Main image/illustration -->
              <div class="relative z-10 p-8">
                <img 
                  src={imageUrl} 
                  alt={imageAlt} 
                  class="w-full max-w-lg mx-auto animate-float"
                  style="filter: drop-shadow(0 0 30px rgba(50, 255, 210, 0.3));"
                />
              </div>
              
              <!-- Floating elements -->
              <div class="absolute top-4 left-4 w-4 h-4 bg-accent-primary rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
              <div class="absolute bottom-8 right-8 w-3 h-3 bg-accent-purple rounded-full animate-pulse" style="animation-delay: 1.5s;"></div>
              <div class="absolute top-1/2 left-0 w-2 h-2 bg-accent-blue rounded-full animate-pulse" style="animation-delay: 2.5s;"></div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#features" class="text-accent-glow hover:text-white transition-colors">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  /* Enhanced animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
  
  /* Ensure proper stacking */
  .relative {
    position: relative;
  }
  
  /* Responsive typography */
  @media (max-width: 640px) {
    h1 {
      font-size: 2.5rem;
    }
    h2 {
      font-size: 2rem;
    }
  }
</style> 