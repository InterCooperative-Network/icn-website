---
// src/components/StickyCTA.astro
export interface Props {
  text?: string;
  link?: string;
  icon?: string; // Optional: For an icon in the button
}

const {
  text = "Join the Movement",
  link = "/get-started",
  icon = "arrow-right-circle" // Example icon name, to be implemented with an icon system
} = Astro.props;
---

<div class="fixed bottom-8 right-8 z-50 hidden md:block animate-fade-in-delay-1000">
  <a href={link} class="btn btn-primary shadow-xl hover:shadow-2xl transition-all duration-300 ease-in-out transform hover:-translate-y-1 flex items-center space-x-2 group">
    <span>{text}</span>
    <!-- Placeholder for icon, real icon component needed -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
    </svg>
  </a>
</div>

<style>
  /* Ensure a slightly delayed fade-in if desired, controlled by animate-fade-in-delay-1000 */
  /* Tailwind's animate-fade-in utility might need to be defined if not already available */
  /* You can create custom animations in global.css or directly here */
  .animate-fade-in-delay-1000 {
    animation-delay: 1s; /* Example delay */
  }
</style> 