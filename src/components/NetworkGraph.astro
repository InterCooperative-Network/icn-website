<div id="network-graph-container" class="network-graph-container">
  <svg id="network-svg"></svg>
</div>

<script>
  import * as d3 from 'd3';

  // Graph Data: Represents ICN primitives and relationships
  const nodes = [
    { id: 'User', group: 1, radius: 20 },
    { id: 'Identity', group: 2, radius: 15 },
    { id: 'Governance', group: 2, radius: 15 },
    { id: 'Economics', group: 2, radius: 15 },
    { id: 'Federation', group: 2, radius: 15 },
    { id: 'Compute', group: 3, radius: 10 },
    { id: 'Trust', group: 3, radius: 10 },
    { id: 'Ledger', group: 3, radius: 10 },
    { id: 'Contract', group: 3, radius: 10 },
  ];

  const links = [
    { source: 'User', target: 'Identity' },
    { source: 'Identity', target: 'Trust' },
    { source: 'Identity', target: 'Governance' },
    { source: 'Governance', target: 'Contract' },
    { source: 'Governance', target: 'Economics' },
    { source: 'Economics', target: 'Ledger' },
    { source: 'Economics', target: 'Federation' },
    { source: 'Federation', target: 'Compute' },
    { source: 'Ledger', target: 'User' }, // Close loop
  ];

  const container = document.getElementById('network-graph-container');
  const svg = d3.select('#network-svg');

  let width = container?.clientWidth || 800;
  let height = container?.clientHeight || 600;

  svg
    .attr('width', '100%')
    .attr('height', '100%')
    .attr('viewBox', [-width / 2, -height / 2, width, height]);

  const simulation = d3.forceSimulation(nodes)
    .force('charge', d3.forceManyBody().strength(-300))
    .force('link', d3.forceLink(links).id((d: any) => d.id).distance(100))
    .force('center', d3.forceCenter(0, 0)) // Center graph
    .force('x', d3.forceX().strength(0.05))
    .force('y', d3.forceY().strength(0.05));

  const link = svg.append('g')
    .attr('stroke', 'var(--accent-teal)')
    .attr('stroke-opacity', 0.4)
    .selectAll('line')
    .data(links)
    .join('line')
    .attr('stroke-width', 1.5);

  const node = svg.append('g')
    .attr('stroke', '#fff')
    .attr('stroke-width', 1.5)
    .selectAll('circle')
    .data(nodes)
    .join('circle')
    .attr('r', (d: any) => d.radius)
    .attr('fill', (d: any) => d.group === 1 ? 'var(--accent-blue)' : d.group === 2 ? 'var(--accent-teal)' : 'var(--accent-purple)')
    .call(drag(simulation) as any);

  node.append('title')
    .text((d: any) => d.id);

  // Labels
  const labels = svg.append('g')
    .selectAll('text')
    .data(nodes)
    .join('text')
    .attr('dy', 4)  // Vertical align middle
    .attr('dx', (d: any) => d.radius + 5) // Offset right
    .text((d: any) => d.id)
    .attr('fill', 'var(--text-secondary)')
    .style('font-size', '12px')
    .style('font-family', 'var(--font-mono)')
    .style('pointer-events', 'none');

  simulation.on('tick', () => {
    link
      .attr('x1', (d: any) => d.source.x)
      .attr('y1', (d: any) => d.source.y)
      .attr('x2', (d: any) => d.target.x)
      .attr('y2', (d: any) => d.target.y);

    node
      .attr('cx', (d: any) => d.x)
      .attr('cy', (d: any) => d.y);
      
    labels
      .attr('x', (d: any) => d.x)
      .attr('y', (d: any) => d.y);
  });

  // Resize handler
  window.addEventListener('resize', () => {
    width = container?.clientWidth || 800;
    height = container?.clientHeight || 600;
    svg.attr('viewBox', [-width / 2, -height / 2, width, height]);
    simulation.alpha(0.3).restart();
  });

  function drag(simulation: any) {
    function dragstarted(event: any) {
      if (!event.active) simulation.alphaTarget(0.3).restart();
      event.subject.fx = event.subject.x;
      event.subject.fy = event.subject.y;
    }

    function dragged(event: any) {
      event.subject.fx = event.x;
      event.subject.fy = event.y;
    }

    function dragended(event: any) {
      if (!event.active) simulation.alphaTarget(0);
      event.subject.fx = null;
      event.subject.fy = null;
    }

    return d3.drag()
      .on('start', dragstarted)
      .on('drag', dragged)
      .on('end', dragended);
  }
</script>

<style>
  .network-graph-container {
    width: 100%;
    height: 100%; /* Fill parent */
    position: relative;
    overflow: hidden;
  }

  svg {
    display: block;
    width: 100%;
    height: 100%;
  }

  /* Hover effect on nodes */
  circle {
    transition: r 0.2s ease, fill-opacity 0.2s ease;
    cursor: grab;
  }
  
  circle:hover {
    fill-opacity: 0.8;
    stroke: var(--accent-amber);
  }

  circle:active {
    cursor: grabbing;
  }
</style>
