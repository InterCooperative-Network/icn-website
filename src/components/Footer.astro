---
// src/components/Footer.astro - Updated with new Brand Sheet Content
const currentYear = new Date().getFullYear();

// Social links can be kept or updated based on priorities
const socialLinks = [
  { href: "https://github.com/InterCooperative-Network", label: "GitHub", iconName: "github" }, 
  // { href: "#", label: "Matrix", iconName: "matrix" }, 
];

// Simplified icons for example, ideally use Astro Icons or full SVGs
const icons: { [key: string]: string } = {
  github: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>`,
};

// Updated footer copy from new mockup
const footerMainText = "Tired of systems stuck in the 17th century? This is real infrastructure for a new world.";
const microcopyContent = [
  "No monarchs. No bosses.",
  "Just people, technology, and real democracy."
];

const footerNavLinks = [
    { href: "#/join", text: "Join Now" }, // Assuming /join for Join Now
    { href: "#/contact", text: "Contact" },
    { href: "/community#discussions", text: "Discussions" }
];
---

<footer class="bg-midnight-navy border-t border-soft-black/30 mt-auto pt-12 pb-8 text-sm">
  <div class="container mx-auto px-4 text-center text-slate-gray">
    <p class="text-lg mb-6 text-white">{footerMainText}</p>
    
    <nav class="mb-8">
      <ul class="flex flex-wrap justify-center gap-x-4 sm:gap-x-6 gap-y-2">
        {footerNavLinks.map(link => (
          <li>
            <a href={link.href} class="text-slate-gray hover:text-sky-blue font-medium hover:underline transition-colors duration-150">
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="mb-8 space-y-1 italic text-slate-gray">
        {microcopyContent.map(line => (
            <p class="text-sm">{line}</p>
        ))}
    </div>
    
    <div class="flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0 border-t border-soft-black/30 pt-6 mt-8">
      <p class="text-xs">&copy; {currentYear} InterCooperative Network.</p>
      <div class="flex space-x-4">
        {socialLinks.map(link => (
          <a 
            href={link.href} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label={link.label}
            class="text-slate-gray hover:text-sky-blue transition-colors duration-150"
          >
            {icons[link.iconName] ? <Fragment set:html={icons[link.iconName]} /> : link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer> 